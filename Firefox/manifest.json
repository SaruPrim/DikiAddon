{
  "manifest_version": 2,
  "name": "Słownik Diki",
  "version": "1.2.3",
  "description": "Szybkie wyszukiwanie słów na diki.pl",
  "permissions": ["contextMenus", "storage"],
  "background": {
    "scripts": ["background.js"]
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "diki-addon@example.com",
      "data_collection_permissions": {
      "required": ["none"]
    }
    }
  },
  "icons": {
    "128": "diki_logo.png"
  },
  "browser_action": {
    "default_icon": "diki_logo.png",
    "default_popup": "popup.html"
  },
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  }
}
